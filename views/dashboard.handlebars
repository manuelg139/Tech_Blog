<!-- Blog Post Section -->
<section id="posts">
    <div class="container">
        <div class="dash-heater">
            <h1 class="dash-title">YOUR DASHBOARD</h1>
        </div>
        <div class="createnew">
            <h4>CREATE NEW POST</h4>

        </div>

        {{#if posts.length}}

        {{#each posts as |post|}}

        {{> post-edit-card post}}
        {{/each}}

    </div>


    {{else}}
    <h6 class="pb-4 has-text-centered is-italic">you do not currently have any posts</h6>

    {{/if}}


</section>


<!-- Javascript Efects-->
<script>

    TweenMax.from('.logo', 1, {
        delay: .5,
        opacity: 0,
        x: -20,
        ease: Expo.easeInOut
    })


    TweenMax.from('.nav', 1, {
        delay: .6,
        opacity: 0,
        x: -20,
        ease: Expo.easeInOut
    })

    TweenMax.to('.border-bottom', 1, {
        delay: .3,
        width: '100%',
        ease: Expo.easeInOut
    })

    TweenMax.from('.subtitle', 1, {
        delay: .6,
        opacity: 0,
        x: -20,
        ease: Expo.easeInOut
    })

    TweenMax.to('.title', 1, {
        delay: .5,
        width: '100%',
        ease: Expo.easeInOut
    })

    TweenMax.from('.desc', 1, {
        delay: .8,
        opacity: 0,
        x: -20,
        ease: Expo.easeInOut
    })

    TweenMax.to('.img-1', 1, {
        delay: .6,
        width: '650px',

        ease: Expo.easeInOut
    })

    TweenMax.to('.img-2', 1, {
        delay: .8,
        width: '500px',
        ease: Expo.easeInOut
    })

    TweenMax.to('.img-3', 1, {
        delay: .9,
        width: '300px',
        ease: Expo.easeInOut
    })

    TweenMax.to('.first', 1.5, {
        delay: .2,
        left: '-100%',
        ease: Expo.easeInOut
    })

    TweenMax.to('.second', 1.5, {
        delay: .4,
        left: '-100%',
        ease: Expo.easeInOut
    })

    TweenMax.to('.third', 1.5, {
        delay: .6,
        left: '-100%',
        ease: Expo.easeInOut
    })

    /* DASHBAORD */

    TweenMax.from('.dash-heater', 1, {
        delay: .7,
        opacity: 0,
        x: -20,
        ease: Expo.easeInOut
    })


    TweenMax.from('.container', 1, {
        delay: .8,
        opacity: 0,
        x: -20,
        ease: Expo.easeInOut
    })


    TweenMax.from('.article', 1, {
        delay: 1,
        opacity: 0,
        x: -20,
        ease: Expo.easeInOut
    })

</script>