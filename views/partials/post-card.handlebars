<div class="grid">
    <!-- article -->
    <div class="grid-item">
        <article class="article">
            <div class="card">
                <a href="/posts/{{id}}">
                    <h4 class="card-title"> {{title}} </h4>
                </a>
                <p>
                    {{post_content}}
                </p>
                <br>
                <span class="card-footer">

                    <ul>

                        <li> <img class="icon" src="https://img.icons8.com/wired/64/000000/finn.png" />
                            @{{user.username}}</li>
                        <li>

                        <li>
                            <img class="icon" src="https://img.icons8.com/ios-filled/50/000000/github.png" />
                            <a href="https://github.com/{{users.github}}">{{users.github}}</a>
                        </li>

                        <li> <img class="icon" src="https://img.icons8.com/wired/64/000000/train-ticket.png" />
                            <a href="/posts/{{id}}">{{comments.length}} {{format_plural
                                "comment" comments.length}}</a>
                        </li>
                        <li>

                        <li> <img class="icon" src="https://img.icons8.com/wired/64/000000/date-span.png" />
                            {{format_date post_date}} </li>
                        <li>
                    </ul>

                </span>
            </div>
        </article>
    </div>
    <!-- .article -->
</div>