<h4 class="comments-title"> Comments </h4>
<div class="comments">

    {{#each this}}
    <section class="comment">
        <div class="meta">
            {{users.username}} on {{format_date created_at}}
        </div>
        <div class="text">
            {{comment_content}}
        </div>
    </section>
    {{/each}}
</div>